<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneyAndroidApp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KalkulackaMen">
        <activity
            android:name="com.example.moneyAndroidApp.HistoricalDataActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moneyAndroidApp.ConvertActivity"
            android:exported="false" />
        <activity
            android:name="com.example.moneyAndroidApp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChartLandscapeActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>